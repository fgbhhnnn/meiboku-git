{
  "type": "custom.overlay",
  "name": "Overlay group",
  "sections": {
    "cart-drawer": {
      "type": "cart-drawer",
      "settings": {
        "show_cart_note": true,
        "show_shipping_text": true,
        "show_view_cart_button": false,
        "show_checkout_button": true,
        "show_price_in_checkout_button": true
      }
    },
    "newsletter-popup": {
      "type": "newsletter-popup",
      "settings": {
        "apparition_delay": 5,
        "show_only_on_index": true,
        "hide_for_account_holders": true,
        "show_only_once": true,
        "title": "メールマガジンのご登録",
        "content": "ニュースレターを購読することで、お客様が受け取ることができる内容を記述します。",
        "button_text": "Subscribe",
        "background": "#1c1c1c",
        "text_color": "#ffffff",
        "button_background": "#ffffff",
        "button_text_color": "#1c1c1c"
      }
    },
    "privacy-banner": {
      "type": "privacy-banner",
      "settings": {
        "title": "クッキーポリシーについて",
        "content": "<p>当社は、当社のウェブサイトにおいて最高の体験を提供するために、クッキーおよび類似の技術を使用しています。詳しくは、プライバシーポリシーをご参照ください。<\/p>",
        "background": "#1c1c1c",
        "text_color": "#ffffff"
      }
    }
  },
  "order": [
    "cart-drawer",
    "newsletter-popup",
    "privacy-banner"
  ]
}